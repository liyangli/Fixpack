<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd
            http://ehcache-spring-annotations.googlecode.com/svn/schema/ehcache-spring
            http://ehcache-spring-annotations.googlecode.com/svn/schema/ehcache-spring/ehcache-spring-1.1.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->
	<!-- 使用 annotation -->
	<context:annotation-config />
	<!-- 使用 annotation 自动注册bean,并检查 @Service, @Repository注解已被注入 -->
	<context:component-scan base-package="com.bohui">
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>

	<!-- hibernate 属性配置 -->
	<context:property-placeholder location="/WEB-INF/config/jdbc.properties" />
    
    <!-- ehcache -->

	<!-- Hibernate 配置管理 -->
	<import resource="applicationContext-persistence.xml" />
	
	<!-- 初始化系统缓存 -->
    <bean class="com.bohui.duty.web.SystemCacheInit" init-method="init" >
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>
    
    <!--密码加密器-->
    <bean id="pwdEncoder" class="com.bohui.common.utils.Md5PwdEncoder">
        <property name="salt">
            <value>PONY</value>
        </property>
    </bean>
</beans>
